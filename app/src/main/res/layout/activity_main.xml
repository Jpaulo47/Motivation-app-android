<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:id="@+id/linear_menu"
        android:layout_width="match_parent"
        android:background="@color/purple"
        android:layout_height="wrap_content"
        android:paddingStart="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingEnd="8dp">

        <ImageView
            android:id="@+id/image_all"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_all_inclusive"
            tools:ignore="ContentDescription"/>

        <ImageView
            android:id="@+id/image_happy"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_emoji_happy"
            tools:ignore="ContentDescription"/>

        <ImageView
            android:id="@+id/image_sunny"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:src="@drawable/ic_baseline_wb_sunny_24"
            tools:ignore="ContentDescription"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OlÃ¡, Kotlin!"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/cabin"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linear_menu"
        android:layout_marginTop="32dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/text_frases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/cabin"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:padding="16dp"
        android:gravity="center"
        android:text="@string/motivation"/>

    <View
        android:layout_width="128dp"
        android:layout_height="4dp"
        android:background="@color/black"
        android:backgroundTint="@color/dark_purple"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/text_frases"
        android:elevation="5dp"/>

    <Button
        android:id="@+id/button_frases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:backgroundTint="@color/dark_purple"
        android:fontFamily="@font/cabin"
        android:includeFontPadding="false"
        android:text="@string/nova_frase" />

</RelativeLayout>